<div class="d-flex justify-content-end align-items-center">
    {{#match @custom.header_serach_type  "Native"}}
        {{search}}
    {{/match}}	    
    
    {{#match @custom.header_serach_type  "Theme Search"}}        
        <a href="#" class="search-bar search-elements">
            {{> svg/search }}
        </a>
    {{/match}}	   

    {{#if @custom.layout_switcher }}
    <a href="#" class="switcher">
        {{#if @custom.dark_layout }}
            <div class="light">
                {{> svg/moon }}
            </div>
            <div class="dark">
                {{> svg/sun }}
            </div>
        {{else}}
            <div class="light">
                {{> svg/moon }}
            </div>
            <div class="dark">
                {{> svg/sun }}
            </div>
        {{/if}}
    </a>
    {{/if}}

    <div class="header-right-area">
        <div class="hamburger-menus">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>

    {{#if @site.members_enabled}}
        {{#unless @member}}
            <a class="gh-head-button button d-none d-lg-block ms-3" href="{{@site.url}}/#/portal/signin"><span>{{t "Sign In"}}</span><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M217.9 105.9L340.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L217.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1L32 320c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM352 416l64 0c17.7 0 32-14.3 32-32l0-256c0-17.7-14.3-32-32-32l-64 0c-17.7 0-32-14.3-32-32s14.3-32 32-32l64 0c53 0 96 43 96 96l0 256c0 53-43 96-96 96l-64 0c-17.7 0-32-14.3-32-32s14.3-32 32-32z"/></svg></a>
        {{else}}
            <a href="{{@site.url}}/account/" class="header-account-link">
                {{> svg/avatar-two }}
            </a>
            <a class="gh-head-button button d-none d-lg-block" href="javascript:" data-members-signout>{{t "Sign Out"}}</a>
        {{/unless}}
    {{/if}}
</div>