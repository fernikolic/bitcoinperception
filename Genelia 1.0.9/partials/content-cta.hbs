<div class="members-cta-teaser">
    {{{html}}}
</div>
<div class="members-cta">
    {{#has visibility="paid"}}
        <h2>{{t "This post is for paying subscribers only"}}</h2>
    {{/has}}
    {{#has visibility="members"}}
        <h2>{{t "Members-only access"}}</h2>
    {{/has}}
    {{#has visibility="tiers"}}
        <h2>{{t "This post is for subscribers on the {tiers} posts." tiers=tiers}}</h2>
    {{/has}}
    <p class="cta-details">{{t "Sign up to get full access - it's free!"}}</p>
    {{#if @member}}
        <a class="button" data-portal="account/plans">{{t "Upgrade your account"}}</a>
    {{else}}
        <a class="button" data-portal="signup">{{t "Free Membership"}}</a>
        <p><small>{{t "Already have an account?"}} <a data-portal="signin">{{t "Sign in"}}</a></small></p>
    {{/if}}
</div>
