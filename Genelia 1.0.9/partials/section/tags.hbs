{{#match @custom.top_tags_section  "Top Tags - Top Author"}}
    <section class="top-tags">
        <div class="container-xxl">
            <div class="row mrb--30">
                <div class="col-lg-8">
                    <div class="tags-wrapper">
                        <div class="row">
                            {{#get "tags" limit="5" filter="visibility:public" include="count.posts"  order="count.posts desc"}}
                                {{#if tags}}
                                    {{#foreach tags}}
                                        <div class="popular-tags col">
                                            {{#if feature_image}}
                                            <div class="tag-thumb mb-3">
                                                <a href="{{url}}">
                                                    <img class="lazy" src="{{img_url feature_image size='ss'}}" alt="{{title}}" width="145" height="108"/>
                                                </a>
                                            </div>
                                            {{/if}}
                                            <div class="tags-card-footer">
                                                <div class="tags-posts-meta">
                                                    <a href="{{url}}">
                                                        <h4 class="tags-name"><span>{{name}}</span> <sup>{{plural count.posts empty=(t "0") singular=(t "%") plural=(t "%")}}</sup></h4>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    {{/foreach}}
                                {{/if}}
                            {{/get}}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="top-author">
                        <div class="row gx-3">                    
                            {{#get "authors" include="count.posts"  order="count.posts desc"}}
                                {{! Loop through authors }}
                                {{#foreach authors limit="4" }}
                                    {{#if profile_image}}
                                    <div class="col-3">
                                        <figure class="thumb-wrap">
                                            <a href="{{url}}">
                                                <img class="lazy post-card-image" src="{{profile_image}}" alt="{{name}}" width="75" height="75" />
                                            </a>
                                        </figure>
                                    </div>
                                    {{else}}
                                    <div class="col-3">
                                        <figure class="thumb-wrap no-thumb">
                                            <a href="{{url}}">
                                                {{> svg/avatar-two }}
                                            </a>
                                        </figure>
                                    </div>
                                    {{/if}}
                                {{/foreach}}
                            {{/get}}
                        </div>

                        <div class="row mt-3">
                            <div class="col-7">
                                <a href="{{@site.url}}/authors" class="author-links">{{@site.title}} {{t "top authors"}}</a>
                            </div>
                            <div class="col-5 text-end"><img width="20" height="20" src="{{asset "images/more_icon.webp"}}" alt=""></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{{/match}}

