{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Site header - partials/site-header.hbs --}}
{{> site-header }}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#if post}}
	{{#post}}
	<div class="main-wrapper">
		<div class="container-xxl">
			<div class="row justify-content-center">
				<div class="col-lg-12">
					<div class="cus-membership-section">
						<div class="container-wrapper">
							<div class="row justify-content-center text-center mb-5">
								<div class="col-md-12">
									<h1 class="global-title">{{title}}</h1>                       
								</div>
								<div class="col-lg-7">
									<p class="parrnet-sub-heading mt-3">                 
									{{#if custom_excerpt}}
										{{custom_excerpt}}
									{{else}}
										{{excerpt words="20"}}
									{{/if}}         
									</p>
								</div>
							</div>
						</div>
					</div>

					{{!-- The main content area --}}
					<div class="site-main mt-3">
						{{#get "authors" limit="all" include="count.posts" order="count.posts desc"}}
							{{#if authors}}
							<div class="tags-sec section-padding">
								<div class="row gx-5" id="post-masonry">
									{{#foreach authors}}
										<div class="col-sm-6 col-lg-4 post-loop">
											<article class="post author-post">
												{{#if profile_image}}
												<figure class="thumb-wrap">
													<a href="{{url}}">
														<img class="lazy post-card-image" src="{{profile_image}}" alt="{{name}}" />
													</a>
												</figure>
												{{/if}}
												<!--./ thumb-wrap -->
												
												<div class="content-entry-wrap">
													<h3 class="entry-title">
														<a href="{{url}}">
															{{name}}
														</a>
													</h3>
													<div class="entry-category m-0 pt-3">
														{{#if location}}
														<span class="location">
															{{> svg/location}}
															{{location}}
														</span>
														<span>-</span>
														{{/if}}
														<span>
															{{ count.posts }} {{t "posts"}}
														</span>
													</div>	

													{{#if bio}}
													<div class="entry-summary">
														<p class="tags-desc">{{bio}}</p>
													</div>
													{{/if}}

													<div class="entry-footer">
														<ul class="author-meta">
															{{#if website}}
																<li class="author-social-link"><a href="{{website}}" target="_blank" rel="noopener">{{> svg/link }}</a></li>
															{{/if}}
															{{#if twitter}}
																<li class="author-social-link"><a href="{{twitter_url}}" target="_blank" rel="noopener">{{> svg/twitter }}</a></li>
															{{/if}}
															{{#if facebook}}
																<li class="author-social-link"><a href="{{facebook_url}}" target="_blank" rel="noopener">{{> svg/facebook }}</a></li>
															{{/if}}
														</ul>
													</div>
												</div>
												<!--./ content-entry-wrap -->
											</article>
										</div>
									{{/foreach}}
								</div>
							</div>
							{{/if}}
						{{/get}}
					</div>
				</div>
			</div>
		</div>
	</div>
	{{/post}}
{{else}}
	<div class="main-wrapper">
		<div class="container-xxl">
			<div class="row justify-content-center">
				<div class="col-lg-12">
					<div class="cus-membership-section">
						<div class="container-wrapper">
							<div class="row align-items-center text-center mb-5">
								<div class="col-md-12">
									<div class="heading-wrap mb-4">
										<h1 class="section-title">{{t "Authors"}}</h1>
									</div>                            
								</div>
								<div class="col-lg-12">
									<p class="parrnet-sub-heading mt-4">                 
										{{t "Respondeat totidem verbis. Utinam quidem dicerent alium alio beatiorem, Iam ruinas videres. Quamquam ab iis philosophiam et omnes ingenuas disciplinas habemus"}}
									</p>
								</div>
							</div>
						</div>
					</div>

					{{!-- The main content area --}}
					<main class="site-main">
						{{#get "authors" limit="all" filter="visibility:public" include="count.posts" order="count.posts desc"}}
							{{#if authors}}
							<div class="tags-sec section-padding">
								<div class="row gx-5" id="post-masonry">
									{{#foreach authors}}
										<div class="col-sm-6 col-lg-3  post-loop">
											<article class="post author-post">
												{{#if profile_image}}
												<figure class="thumb-wrap">
													<a href="{{url}}">
														<img src="{{profile_image}}" class="lazy post-card-image" alt="{{name}}" />
													</a>
												</figure>
												{{/if}}
												<!--./ thumb-wrap -->
												
												<div class="content-entry-wrap text-center">
													<h3 class="entry-title">
														<a href="{{url}}">
															{{name}}
														</a>
													</h3>
													<div class="entry-category">
														<span class="location">
															{{> svg/location}}
															{{location}}
														</span>
														<span>-</span>
														<span>
															{{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}
														</span>
													</div>	

													{{#if bio}}
													<div class="entry-summary">
														<p class="tags-desc">{{bio}}</p>
													</div>
													{{/if}}

													<div class="entry-footer">
														<ul class="author-meta">
															{{#if website}}
																<li class="author-social-link"><a href="{{website}}" target="_blank" rel="noopener">{{> svg/link }}</a></li>
															{{/if}}
															{{#if twitter}}
																<li class="author-social-link"><a href="{{twitter_url}}" target="_blank" rel="noopener">{{> svg/twitter }}</a></li>
															{{/if}}
															{{#if facebook}}
																<li class="author-social-link"><a href="{{facebook_url}}" target="_blank" rel="noopener">{{> svg/facebook }}</a></li>
															{{/if}}
														</ul>
													</div>
												</div>
												<!--./ content-entry-wrap -->
											</article>
										</div>
									{{/foreach}}
								</div>
							</div>
							{{/if}}
						{{/get}}
					</main>
				</div>
			</div>
		</div>
	</div>
{{/if}}