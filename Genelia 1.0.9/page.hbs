
{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Site header - partials/site-header.hbs --}}
{{> site-header }}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
<div class="main-wrapper">
    <div class="container-xxl">
        <div class="row justify-content-lg-center">
            <div class="col-lg-8">
                {{!-- The main content area --}}
                <div class="site-main">
                    <article class="post single-post  style-four post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">
                        {{#if @page.show_title_and_feature_image}}
                        <div class="entry-header text-center">
                            <h1 class="global-title mb-4 mt-0">{{title}}</h1>
                        </div>

                        {{#if feature_image}}
                        <figure class="post-full-image">
                            <img
                            srcset="{{img_url feature_image size="s"}} 300w,
                                    {{img_url feature_image size="m"}} 600w"
                            sizes="(max-width: 1000px) 400px, 700px"
                            src="{{img_url feature_image size="xl"}}"
                                alt="{{title}}"
                            />
                        </figure>
                        {{/if}}
                        {{/if}}

                        {{#if custom_excerpt}}
                        <div class="custom-single-excerpt">
                            <p class="post-full-custom-excerpt">{{custom_excerpt}}</p>
                        </div>
                        {{/if}}

                        <div class="entry-content">
                            <div class="all-contents">
                                {{content}}
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </div>
</div>
{{/post}}
