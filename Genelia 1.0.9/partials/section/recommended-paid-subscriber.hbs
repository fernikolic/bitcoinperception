<div class="recomaded-section">
    <div class="container-xxl">
        {{#if heading}}
        <div class="row mb-4">
            <div class="col-md-6">
                <h3 class="section-title-m text-uppercase">{{>svg/polygonal}}{{heading}}</h3>
            </div>
            <div class="col-md-6 text-end"></div>
        </div>
        {{/if}}

        <div class="row gx-5">
            {{! Get three posts that have the same primary tag as the current post}}
            {{! Only get posts that are featured }}            
            {{#get "posts" limit="4" filter="visibility:paid+feature_image:-null" include="tags" as |special_posts|}}
                {{#foreach special_posts}}
                    {{> component/recomanded }}
                {{/foreach}}
            {{/get}} 
        </div>
    </div>
</div>